{
  "manifest_version": 3,
  "name": "JWT Capture Lab",
  "description": "Laboratorio para capturar JWTs, sessionStorage y cookies desde todas las pesta√±as.",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Capturar JWTs"
  }
}
